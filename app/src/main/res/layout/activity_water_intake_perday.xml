<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaterIntakePerday"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#61cdff"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_glasses_per_day"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:id="@+id/display_water_glass_intake"
            android:textColor="@android:color/background_light"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/minus_water"
            android:scaleType="fitXY"
            android:id="@+id/decrease_water_intake"
            android:padding="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/background_light"/>
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/water"
            android:layout_marginStart="50dp"/>
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/increase_water_intake"
            android:src="@drawable/plus_water"
            android:scaleType="fitXY"
            android:padding="15dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/background_light"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/one_glass_capacity"
        android:textSize="15sp"/>



</LinearLayout>