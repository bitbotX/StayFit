<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LunchMeals"
    android:orientation="vertical">
    <TextView
        android:id="@+id/lunch_cals"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Total Calories"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/gradi"/>

    <ListView
        android:id="@+id/dinner_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/meals_done"
        android:id="@+id/lunch_meals_done"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_level"/>

</LinearLayout>